{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "middleware/*": ["./middleware/*"]
    }
  },
  "include": ["tests/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
